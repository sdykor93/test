<h1>Simple Blog</h1>


<div class="container">
            <form action="/write" method="POST">
                <div class="form-group">
                    <label for="exampleInputEmail1">제목</label>
                    <input type="text" name="title" class="form-control"
                    id="exampleInputEmail1" placeholder="제목">
                </div>
                <label for="exampleInputEmail1">내용</label>
                <textarea name="content" class="form-control" rows="5" id="commit"></textarea>
                <br>
                <button type="submit" class="btn btn-default" style="margintop:
                20px">전송</button>
            </form>
</div>

<%= form_tag '/create', method:'post', multipart: true do %>
<%= file_field_tag 'image' %>
<%= submit_tag 'submit' %>
<% end %>